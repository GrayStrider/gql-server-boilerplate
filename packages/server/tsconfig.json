{
  "extends": "./../../tsconfig.base.json",
  "include": [
    "config",
    "src",
    "test"
  ],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["config/export"],

      "src/*": ["server/src/*"],
      "config/*": ["server/config/*"],
      "test/*": ["server/test/*"],
      "@utils": ["../shared-TS/utils"]
    },

    "esModuleInterop": true
  }

}
