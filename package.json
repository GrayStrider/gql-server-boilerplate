    "@types/ioredis": "^4.14.4",
    "@types/jest": "^24.9.0",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-redis": "^4.0.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa-session": "^5.10.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.5.1",
    "@types/nodemailer": "^6.4.0",
    "@types/ramda": "^0.26.39",
    "@types/signale": "^1.2.1",
